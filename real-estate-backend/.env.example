# ── Database ──────────────────────────────────────────────────────────────────
# MySQL connection string format:
# mysql://USER:PASSWORD@HOST:PORT/DATABASE_NAME
DATABASE_URL=mysql://root:YOUR_PASSWORD@localhost:3306/real_estate_system

# ── JWT ───────────────────────────────────────────────────────────────────────
# Use a strong random secret in production (e.g. generate with: openssl rand -hex 64)
JWT_SECRET=replace_with_a_strong_secret_key
JWT_EXPIRES_IN=1d

# Access token lifetime (short-lived)
JWT_ACCESS_EXPIRES_IN=15m

# Refresh token lifetime (long-lived)
JWT_REFRESH_EXPIRES_IN=7d

# ── App ───────────────────────────────────────────────────────────────────────
PORT=5000
NODE_ENV=development
